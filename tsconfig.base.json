{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "baseUrl": "../../",
    "paths": {
      "@/common-utils": [
        "./winglet/common-utils/src"
      ],
      "@/common-utils/*": [
        "./winglet/common-utils/src/*"
      ],
      "@/data-loader": [
        "./winglet/data-loader/src"
      ],
      "@/data-loader/*": [
        "./winglet/data-loader/src/*"
      ],
      "@/json": [
        "./winglet/json/src"
      ],
      "@/json/*": [
        "./winglet/json/src/*"
      ],
      "@/json-schema": [
        "./winglet/json-schema/src"
      ],
      "@/json-schema/*": [
        "./winglet/json-schema/src/*"
      ],
      "@/react-utils": [
        "./winglet/react-utils/src"
      ],
      "@/react-utils/*": [
        "./winglet/react-utils/src/*"
      ],
      "@/promise-modal": [
        "./lerx/promise-modal/src"
      ],
      "@/promise-modal/*": [
        "./lerx/promise-modal/src/*"
      ],
      "@/schema-form": [
        "./canard/schema-form/src"
      ],
      "@/schema-form/*": [
        "./canard/schema-form/src/*"
      ],
      "@aileron/*": [
        "./aileron/common/*"
      ]
    },
    "module": "ESNext",
    "moduleResolution": "bundler",
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    // Strict Type-Checking Options
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": true,
    // Module Resolution Options
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    // Emit Options
    "declaration": true,
    "declarationMap": false,
    "sourceMap": true,
    "removeComments": true,
    // Project References
    "composite": true,
    // Additional Checks
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    // Decorators
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "packages/**/src",
    "packages/**/src/**/*.tsx?",
    "packages/**/coverage/**/*.ts",
    "packages/**/coverage/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "packages/**/node_modules",
    "packages/**/dist"
  ]
}