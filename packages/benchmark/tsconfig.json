{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@/benchmark": [
        "./src"
      ],
      "@/benchmark/*": [
        "./src/*"
      ],
      "@/schema-form": [
        "../schema-form/src"
      ],
      "@/schema-form/*": [
        "../schema-form/src/*"
      ],
      "@/common": [
        "../common/src"
      ],
      "@/common/*": [
        "../common/src/*"
      ],
    },
  },
  "include": [
    "src",
    "src/**/*.tsx?",
    "./**/*.d.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "scripts",
    "test",
    "tests",
    "**.test.tsx?",
    "**.spec.tsx?",
    "**.stories.tsx",
  ]
}