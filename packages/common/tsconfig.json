{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "src/**/*.ts",
    "./**/*.d.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "documents",
    "build",
    "coverage",
    "scripts",
    "test",
    "tests",
    "**.test.ts",
    "**.spec.ts",
  ]
}