{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "../../",
    "outDir": "./dist",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": [
      "node",
      "react",
      "react-dom"
    ],
    "paths": {
      "@/claude-assets-sync": [
        "./slats/claude-assets-sync/src"
      ],
      "@/claude-assets-sync/*": [
        "./slats/claude-assets-sync/src/*"
      ],
      "@aileron/*": [
        "./aileron/common/*"
      ]
    }
  },
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
