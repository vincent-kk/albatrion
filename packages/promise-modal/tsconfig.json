{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@/promise-modal": [
        "./src"
      ],
      "@/promise-modal/*": [
        "./src/*"
      ],
    },
  },
  "include": [
    "src",
    "src/**/*.tsx?",
    "./**/*.d.ts",
    "coverage/**/*.story.tsx",
    "coverage/**/*.stories.tsx",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "documents",
    "build",
    "coverage",
    "scripts",
    "test",
    "tests",
    "**.test.tsx?",
    "**.spec.tsx?",
    "**.story.tsx",
    "**.stories.tsx",
  ]
}