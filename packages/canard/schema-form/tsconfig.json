{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "../../",
    "outDir": "./dist",
    "paths": {
      "@/schema-form": [
        "./canard/schema-form/src"
      ],
      "@/schema-form/*": [
        "./canard/schema-form/src/*"
      ],
      "@aileron/*": [
        "./aileron/common/*"
      ],
    }
  },
  "include": [
    "src",
    "src/**/*.tsx?",
    "coverage/**/*.tsx?"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}