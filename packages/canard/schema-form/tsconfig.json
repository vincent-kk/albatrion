{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "baseUrl": "../../",
    "outDir": "./dist",
    "paths": {
      "@/schema-form": [
        "./canard/schema-form/src"
      ],
      "@/schema-form/*": [
        "./canard/schema-form/src/*"
      ],
      "@aileron/*": [
        "./aileron/common/*"
      ],
    }
  },
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.tsx",
    "coverage/**/*.ts",
    "coverage/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}