{
  "name": "@canard/schema-form-ajv7-plugin",
  "version": "0.2.1",
  "description": "AJV 7.x validator plugin for @canard/schema-form providing JSON Schema validation with Draft-07 and Draft 2019-09 support",
  "keywords": [
    "@canard/schema-form",
    "schema-form",
    "plugin",
    "react",
    "json-schema",
    "validation",
    "validator",
    "ajv",
    "ajv7",
    "canard-form",
    "typescript",
    "form-validation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vincent-kk/albatrion.git",
    "directory": "packages/canard/schema-form-ajv7-plugin"
  },
  "license": "MIT",
  "author": {
    "name": "Vincent K. Kelvin",
    "email": "lunox273@gmail.com"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c && yarn build:types",
    "build-storybook": "storybook build",
    "build:publish:npm": "yarn build && yarn publish:npm",
    "build:types": "tsc -p ./tsconfig.declarations.json && tsc-alias -p ./tsconfig.declarations.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.tsx\"",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "publish:npm": "yarn npm publish --access public",
    "storybook": "storybook dev -p 6006",
    "storybook:upgrade": "npx storybook@latest upgrade",
    "test": "vitest",
    "version:major": "yarn version major",
    "version:minor": "yarn version minor",
    "version:patch": "yarn version patch"
  },
  "dependencies": {
    "ajv": "^7.0.0"
  },
  "devDependencies": {
    "@canard/schema-form": "workspace:^",
    "@chromatic-com/storybook": "^3.2.4",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-replace": "^6.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@size-limit/preset-app": "^11.1.6",
    "@size-limit/preset-big-lib": "^11.1.6",
    "@size-limit/preset-small-lib": "^11.1.6",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/rollup-plugin-peer-deps-external": "^2.2.5",
    "dependency-cruiser": "^16.7.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rollup": "^4.42.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-visualizer": "^5.12.0",
    "size-limit": "^11.2.0",
    "storybook": "^8.6.14",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.7.2",
    "vite": "^6.3.5",
    "vitest": "2.1.9"
  }
}
