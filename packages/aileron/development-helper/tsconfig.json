{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist"
  },
  "include": [
    "src",
    "src/**/*.tsx?",
    "./**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "documents",
    "build",
    "coverage",
    "scripts",
    "__test__",
    "__tests__",
    "**/*.test.tsx?",
    "**/*.spec.tsx?",
    "**/*.story.tsx",
    "**/*.stories.tsx"
  ]
}