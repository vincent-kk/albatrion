{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "../../",
    "rootDir": "../../",
    "outDir": "./dist",
    "paths": {
      "@/benchmark": [
        "./aileron/benchmark/src"
      ],
      "@/benchmark/*": [
        "./aileron/benchmark/src/*"
      ],
      "@/schema-form": [
        "./canard/schema-form/src"
      ],
      "@/schema-form/*": [
        "./canard/schema-form/src/*"
      ],
      "@/common-utils": [
        "./winglet/common-utils/src"
      ],
      "@/common-utils/*": [
        "./winglet/common-utils/src/*"
      ],
      "@/json-schema": [
        "./winglet/json-schema/src"
      ],
      "@/json-schema/*": [
        "./winglet/json-schema/src/*"
      ],
      "@aileron/*": [
        "./aileron/common/*"
      ],
    }
  },
  "include": [
    "src",
    "src/**/*.tsx?",
    "src/**/*.d.ts",
    "../../canard/schema-form/src/**/*.ts",
    "../../winglet/common-utils/src/**/*.ts",
    "../../winglet/json-schema/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "backup",
    "scripts",
    "__test__",
    "__tests__",
    "**/*.test.tsx?",
    "**/*.spec.tsx?",
    "**/*.stories.tsx"
  ]
}