{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "rootDir": "src",
    "removeComments": false,
    "declarationDir": "dist",
    "declarationMap": false,
    "composite": false,
    "noEmit": false,
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/**",
    "**/*.test.tsx?",
    "**/*.spec.tsx?"
  ]
}