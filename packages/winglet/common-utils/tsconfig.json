{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "../../",
    "outDir": "./dist",
    "paths": {
      "@/common-utils": [
        "./winglet/common-utils/src"
      ],
      "@/common-utils/*": [
        "./winglet/common-utils/src/*"
      ],
      "@aileron/*": [
        "./aileron/common/*"
      ],
    }
  },
  "include": [
    "src",
    "src/**/*.ts",
    "./**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "documents",
    "build",
    "coverage",
    "scripts",
    "test",
    "tests",
    "**.test.ts",
    "**.spec.ts"
  ]
}