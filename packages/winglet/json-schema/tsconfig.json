{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "baseUrl": "../../",
    "outDir": "./dist",
    "paths": {
      "@/json-schema": [
        "./winglet/json-schema/src"
      ],
      "@/json-schema/*": [
        "./winglet/json-schema/src/*"
      ],
      "@/json-schema/scanner": [
        "./winglet/json-schema/src/utils/JsonSchemaScanner/sync"
      ],
      "@/json-schema/async-scanner": [
        "./winglet/json-schema/src/utils/JsonSchemaScanner/async"
      ],
      "@/json-schema/filter": [
        "./winglet/json-schema/src/filter"
      ],
      "@aileron/*": [
        "./aileron/common/*"
      ]
    }
  },
  "include": [
    "src",
    "src/**/*.tsx?"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}