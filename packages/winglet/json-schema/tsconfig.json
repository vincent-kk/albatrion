{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "baseUrl": "../../",
    "outDir": "./dist",
    "paths": {
      "@/json-schema": [
        "./winglet/json-schema/src"
      ],
      "@/json-schema/*": [
        "./winglet/json-schema/src/*"
      ],
      "@aileron/*": [
        "./aileron/common/*"
      ],
    }
  },
  "include": [
    "src",
    "src/**/*.tsx?",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}