{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "baseUrl": "../../",
    "outDir": "./dist",
    "paths": {
      "@/json": [
        "./winglet/json/src"
      ],
      "@/json/*": [
        "./winglet/json/src/*"
      ],
      "@winglet/json": [
        "./winglet/json/src"
      ],
      "@winglet/json/*": [
        "./winglet/json/src/*"
      ],
      "@winglet/json/path": [
        "./winglet/json/src/JSONPath"
      ],
      "@winglet/json/pointer": [
        "./winglet/json/src/JSONPointer"
      ],
      "@aileron/*": [
        "./aileron/common/*"
      ],
    }
  },
  "include": [
    "src",
    "src/**/*.tsx?",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}