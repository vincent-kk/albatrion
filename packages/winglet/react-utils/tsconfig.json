{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@/react-utils": [
        "./src"
      ],
      "@/react-utils/*": [
        "./src/*"
      ],
      "@aileron/*": [
        "./@aileron/*"
      ],
    }
  },
  "include": [
    "src",
    "src/**/*.tsx?",
    "./**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "documents",
    "build",
    "coverage",
    "scripts",
    "test",
    "tests",
    "**.test.tsx?",
    "**.spec.tsx?",
    "**.story.tsx",
    "**.stories.tsx"
  ]
}