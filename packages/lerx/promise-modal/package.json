{
  "name": "@lerx/promise-modal",
  "version": "0.1.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/vincent-kk/albatrion.git",
    "directory": "packages/lerx/promise-modal"
  },
  "license": "MIT",
  "author": {
    "name": "Vincent K. Kelvin",
    "email": "lunox273@gmail.com"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "yarn clean && yarn build:types && rollup -c",
    "build-storybook": "storybook build",
    "build:chain": "yarn clean && yarn workspaces foreach --recursive --topological run build",
    "build:types": "tsc -p ./tsconfig.declarations.json && tsc-alias -p ./tsconfig.json",
    "clean": "rm -rf dist",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.tsx\"",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --report-unused-disable-directives --max-warnings 0",
    "make-dependency-graph": "npx depcruise src --config .dependency-cruiser.js --output-type dot > dependency-graph.dot && dot -Tpng dependency-graph.dot -o dependency-graph.png",
    "publish:chain": "yarn build:chain && yarn npm publish --access public",
    "publish:npm": "yarn build && yarn npm publish --access public",
    "size-limit": "size-limit",
    "start": "yarn build && yarn storybook",
    "storybook": "storybook dev -p 6006",
    "storybook:upgrade": "npx storybook@latest upgrade",
    "test": "yarn build:chain && vitest",
    "version:major": "yarn version major",
    "version:minor": "yarn version minor",
    "version:patch": "yarn version patch"
  },
  "dependencies": {
    "@emotion/css": "^11.0.0",
    "@winglet/common-utils": "workspace:^",
    "@winglet/react-utils": "workspace:^"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@chromatic-com/storybook": "^3.2.6",
    "@emotion/babel-plugin": "^11.13.5",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-replace": "^6.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@size-limit/preset-app": "^11.1.6",
    "@size-limit/preset-big-lib": "^11.1.6",
    "@size-limit/preset-small-lib": "^11.1.6",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/rollup-plugin-peer-deps-external": "^2.2.5",
    "antd": "^5.22.5",
    "dependency-cruiser": "^16.7.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rollup": "^4.42.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.36.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "size-limit": "^11.2.0",
    "storybook": "^8.6.14",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.7.2",
    "vite": "^6.3.5",
    "vitest": "2.1.9"
  },
  "peerDependencies": {
    "react": ">=18 <20",
    "react-dom": ">=18 <20"
  }
}
