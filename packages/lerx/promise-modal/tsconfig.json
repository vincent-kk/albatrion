{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "baseUrl": "../../",
    "outDir": "./dist",
    "paths": {
      "@/promise-modal": [
        "./lerx/promise-modal/src"
      ],
      "@/promise-modal/*": [
        "./lerx/promise-modal/src/*"
      ],
      "@aileron/*": [
        "./aileron/common/*"
      ]
    }
  },
  "include": [
    "src",
    "src/**/*.tsx?",
    "coverage/**/*.tsx?"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}